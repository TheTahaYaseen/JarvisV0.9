JarvisMainLayout:

#:set gui_background_color  25/255, 33/255, 43/255, 1
#:set secondary_window_color 21/255, 21/255, 23/255, 1
#:set text_color 245/255, 245/255, 255/255, 1

#:set font "Font\static\SpaceGrotesk.ttf"
#:set font_thin "Font\static\SpaceGrotesk-Light.ttf"
#:set font_regular "Font\static\SpaceGrotesk-Regular.ttf"
#:set font_medium "Font\static\SpaceGrotesk-Medium.ttf"
#:set font_semibold "Font\static\SpaceGrotesk-SemiBold.ttf"
#:set font_bold "Font\static\SpaceGrotesk-Bold.ttf"

<JarvisMainLayout>:
    
    # Background
    canvas.before:
        Color:
            rgba: gui_background_color
        Rectangle:
            pos: self.pos
            size: self.size
    
    AuraColumn:

    VerticalDivider:

    DumEColumnScrollLayout:

<AuraColumn>:

    orientation: 'vertical'

    size_hint: None, 1
    width: "300dp"

    padding: [25, 25, 25, 25]
    spacing: "10dp"

    BoxLayout:

        orientation: "vertical"
        spacing: "0dp"
        size_hint: 1, None
        height: "55dp"

        Label:
            color: text_color

            text: "Jarvis Mark I v0.9"
            font_name: font_bold
            font_size: "15dp"

        Label:
            color: text_color

            text: "A New Remake/Overhaul"
            font_name: font_bold
            font_size: "15dp"

    HorizontalDivider:     

    Label:
        color: text_color

        text: root.time
        font_name: font_semibold
        font_size: "15dp"

        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]        

    Label:
        color: text_color

        text: root.seconds_left_in_the_day
        font_name: font_semibold
        font_size: "15dp"

        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]        

    Label:
        color: text_color

        text: root.date
        font_name: font_semibold
        font_size: "15dp"

        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]        

    Video:
        source: root.aura_source
        
        size_hint: 1, None
        height: "275dp"
        
        state: "play"
        options: {"eos": "loop"}

    # A Filler
    BoxLayout:

    Label:
        color: text_color

        text: root.witty_reply
        font_name: font_medium
        font_size: "15dp"

        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]        

    TextInput:
        text: "Command..."      

        size_hint: 1, None
        height: "40dp"
        font_size: "18dp"
        font_name: font_medium

        multiline: False
        text_validate_unfocus: False
        on_text_validate: root.submit_command(self)
    
    Label:
        color: text_color

        text: root.listening_status
        font_name: font_semibold
        font_size: "16dp"

        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]        
    
<DumEColumnScrollLayout@ScrollView>: 
    DumEColumn:
        size_hint: 1, None
        height: self.minimum_height    

<DumEColumn>:
    orientation: "vertical"
    padding: [25, 25, 25, 25]
    spacing: "30dp"
    
<VerticalDivider>:
    size_hint: None, 1
    width: 3
    padding: [25, 25, 25, 25]
    canvas:
        Color:
            rgba: text_color
        Rectangle:
            pos: self.x, self.y + 30
            size: self.width, self.height-60    

<HorizontalDivider>:
    size_hint: 1, None
    height: 3
    padding: [12, 25, 12, 25]
    canvas:
        Color:
            rgba: text_color
        Rectangle:
            pos: self.x + 10, self.y
            size: self.width - 20, self.height

<SecondaryWindow>:
    canvas.before:
        Color:
            rgba: secondary_window_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: text_color
        Line:
            rectangle: self.x, self.y, self.width, self.height 
            width: 1

<HeadingDisplay>:
    padding: [12, 18, 12, 18]
    size_hint: 1, None
    height: "45dp" 
    canvas.before:
        Color:
            rgba: text_color
        Rectangle:
            pos: self.pos
            size: self.size

<WrappingText>:
    color: text_color

    font_name: font_medium
    font_size: "17dp"

    text_size: self.width, None
    size_hint: 1, None
    height: self.texture_size[1]        
